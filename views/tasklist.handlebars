</head>

<body>

<!-- Navigation Bar -->
  <header>
    <div class="logo">PROJECT TRACKER</div>
    <nav>
      <ul>
        <li><a href="index.html">Home</a></li>
        <li><a href="registeremployee.html">Register Emplpoyee</a></li>
        <li><a href="profile.html">Employee Profiles</a></li>
        <li><a href="projectlist.html" class="active">Projects</a></li>
        <li><a href="tasklist.html">Tasks</a></li>
      </ul>
    </nav>
    <div class="menu_toggle">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
  </header>
    
<!-- Page Content -->
  <div class="profile-container" style="margin-top:80px">
    <!-- Script will run here to build the profile. -->
    <!-- Options will include an ability to modify profile. -->
    <div class="intro">
      <H5> A list of project tasks. </H5>
    </div>

	<H5> A list of existing tasks for a developer.</H5>

	<!-- need to turn into a sort of filter for results.-->
    <div class="col-md-4">
      <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="Search by Task Title"
          aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
          <i class="fas fa-search"></i>
        </span>
      </div>
    </div>

	<!--This is where the task information will go.-->	  
	<div class="col-sm-8">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Task Title</th>
              <th scope="col">Comments</th>
              <th scope="col">Owner</th>
              <th scope="col">Project Title</th>
              <th scope="col">Due Date</th>
              <th scope="col">Satisfaction</th>
              <th scope="col">Mark Complete</th>
              <th scope="col">Delete</th>
              <th scope="col">Edit</th>
            </tr>
		  </thead>
		  <tbody>
			  {{#each Task}}
			  <tr id="{{this.taskId}}">
				  <td class="title"><input type="text" name="title">{{this.title}}</input></td>
          <td class="details"><input type="text" name="taskDetails">{{this.taskDetails}}</input></td>
          <td class="owner"><input type="text" disabled=true name="{{this.developerId}}">{{this.owner}}</input></td>
				  <td class="projectTitle">{{this.projectTitle}}</td>
          <td class="due-date"><input type="date" name="dueDate">{{this.dueDate}}</input></td>
          <td class="satisfaction">		  
            <select class="form-control-sm" name="satisfaction" disabled=true>
              <option selected value="{{this.satisfaction}}">{{this.satisfaction}}</option>
              <option value="1">Fully Satisfied</option>
              <option value="2">Rewarding</option>
              <option value="3">Not Rewarding</option>
              <option value="4">Dead Inside</option>
            </select>
          </td>
          <td><button id="complete" value="{{this.taskID}}" class="btn btn-outline-secondary mb-2 btn-sm tableButton">
            Mark Complete</button></td>
          <td><button id="delete" value="{{this.taskID}}" class="btn btn-outline-secondary mb-2 btn-sm tableButton">
            Delete</button></td>
          <td><button id="edit" value="{{this.taskID}}" class="btn btn-outline-secondary mb-2 btn-sm tableButton">
            Edit</button></td>
			  </tr>
			  {{/each}}
		  </tbody>

	</div>

